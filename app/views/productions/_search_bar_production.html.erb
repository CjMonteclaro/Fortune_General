<div class="panel-group">
    <div class="panel panel-default text-center">
      <div class="panel-heading">
        <h3 class="panel-title">Production of Intermediaries</h3>
      </div>

      <div class="panel-body">
        <p id="notice"><%= notice %></p>

        <%= form_tag("intm_prod_search", method: "get") do %>

            <div id="from" class='col-md-5'>
              <div class="form-group">
                <%= label_tag  "FROM" %>

                <div class='input-group date' id='datetimepicker6'>
                  <%= text_field_tag :start_date , params[:start_date], class: 'form-control' %>
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>
            </div>

            <div id="to" class='col-md-5'>
              <div class="form-group">
                <%= label_tag  "TO" %>

                <div class='input-group date' id='datetimepicker7'>
                  <%= text_field_tag :end_date , params[:end_date], class: 'form-control'%>
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>
            </div>

            <br><br><br><br>

            <div id="other-search-criteria" class="btn-group btn-group-justified" data-toggle="buttons">
              <label class="btn btn-secondary">
                <input type="radio" name="options" id="option1" autocomplete="off" checked="checked"> •All Branch
              </label>
              <label class="btn btn-secondary">
                <input type="radio" name="options" id="option2" autocomplete="off"> •Per Branch
              </label>
              <label class="btn btn-secondary">
                <input type="radio" name="options" id="option3" autocomplete="off"> •Matrix
              </label>
              <label class="btn btn-secondary">
                <input type="radio" name="options" id="option4" autocomplete="off"> •Cancellation
              </label>
            </div>

            <br><br>

            <div id="extra-search-dropdown" class="row">
              <div class="col-lg-6">
                <div class="input-group">

                  <div class="input-group-btn">

                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Branch<span class="caret"></span></button>

                    <ul class="dropdown-menu">
                      <li><a href="#">AC</a></li>
                      <li><a href="#">AL</a></li>
                      <li><a href="#">AM</a></li>
                      <!-- <li role="separator" class="divider"></li> -->
                      <li><a href="#">AN</a></li>
                    </ul>
                  </div><!-- /btn-group -->

                  <input type="text" class="form-control" aria-label="...">

                </div><!-- /input-group -->
              </div><!-- /.col-lg-6 -->
            </div>

            <br><br><br>

            <form id="output-buttons" class="form-horizontal">
              <div class="btn-group">
                <%= submit_tag("Search" , class: "btn btn-primary") %>
              </div>
              <div class="btn-group">
                <%= link_to "Print(PDF)", productions_path(@production, format: 'pdf', :start_date => params[:start_date], :end_date => params[:end_date]), {class: 'btn btn-primary'} %>
              </div>
              <div class="btn-group">
                <%= link_to "Print(CSV)", productions_path(@production, format: 'csv', :start_date => params[:start_date], :end_date => params[:end_date]), {class: 'btn btn-primary'} %>
              </div>
            </form>

        <% end %>
      </div>
    </div>
  </div>
